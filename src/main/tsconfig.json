{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../../dist/main",
    "rootDir": "..",
    "allowJs": true,
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "../main/**/*.ts",
    "../shared/**/*.ts"
  ],
  "typeRoots": [
    "../../node_modules/@types",
    "./types"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}